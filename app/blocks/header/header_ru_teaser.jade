include ../subscribe/subscribe_ru

mixin header_ru_teaser()
	+b.HEADER(id="home")
		.site-navigation.navigation--fixed
			.container
				.row
						.col-md-2
							.logo
						.col-md-3.col-sm-6
							+b.UL.social
								+e.LI.__link
									a(href="https://medium.com/@fortunecoin" target="_blank")
										i.fa.fa-medium
								+e.LI.__link
									a(href="https://www.facebook.com/fortunecoin/" target="_blank")
										i.fa.fa-facebook
								+e.LI.__link
									a(href="https://twitter.com/fortunecoin" target="_blank")
										i.fa.fa-twitter
								+e.LI.__link
									a(href="https://www.linkedin.com/company/fortunecoin" target="_blank")
										i.fa.fa-linkedin
								+e.LI.__link
									a(href="https://www.reddit.com/user/Fortunecoin/" target="_blank")
										i.fa.fa-reddit
								+e.LI.__link
									a(href="https://angel.co/fortunecoin" target="_blank")
										i.fa.fa-angellist
								+e.LI.__link
									a(href="https://t.me/fortunecoin" target="_blank")
										i.fa.fa-telegram
								+e.LI.__link
									a(href="http://fortunecoin.slack.com" target="_blank")
										i.fa.fa-slack
						.col-md-6.col-sm-6
							+b.NAV.navigations.navigation-teaser
								+e.A.__link(href = '#home') Главная страница
								+e.A.__link(href = '#tokens') Токены
								+e.A.__link(href = '#roadmap') roadmap
								+e.A.__link(href = '#contacts') Контакты
						.col-md-1.language-wrap
							+b.UL.language
								+e.LI.__element-toggle
									a(href='/') EN
								+e.LI.__element-toggle.__element-toggle-active
									a(href='index_ru.html') РУ
								+e.LI.__element-toggle
									a(href='#') 中文
